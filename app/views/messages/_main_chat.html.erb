<div class="chat-header">
  <div class="left-header">
    <div class="header-title">hogehuga</div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="message-top">
      <div class="message-name">Tom</div>
      <div class="message-time">2023/5/26(Fry)20:00</div>
    </div>
    <div class="message-bottom">
      <div class="message-text">おはよう</div>
    </div>
  </div>
  <div class="message">
    <div class="message-top">
      <div class="message-name">Sim</div>
      <div class="message-time">2023/5/26(Fry)21:00</div>
    </div>
    <div class="message-bottom">
      <div class="message-text">にゃー</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
